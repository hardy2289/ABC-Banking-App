<div class="page-header">
   <div class="contextual">
  </div>
</div>
<p id="notice"><%= notice %></p>
<h1>Listing Accounts</h1>
<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th colspan="1">Account Number</th>
	<th colspan="1">Customer Name </th>
  <th colspan="1">Account Type</th>
  <th colspan="1">Available Balance</th>
  <th colspan="1">Overdraft Limit </th>
	<th colspan="1">Branch Location </th>
	<th colspan="1">Update </th>
</tr>
</thead>
  <tbody>
    <% obj.each do |account| %>
      <tr>
	    <td><%= account.user_id %></td>
		<td><%= account.userName.upcase %></td>
        <td><%= account.accountType %></td>
        <td><%= account.balance %></td>
        <td><%= account.overdraftLimit %></td>
        <td><%= account.bankLocation %></td>

				<td><%= link_to 'View ', account  %>
				<%= link_to 'Update Details', edit_account_path(account) %>
				<%= link_to 'Close', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to 'Open New Account', new_account_path %>
<div align="center">
<%= will_paginate @accounts%>
</div>